{
  "extends": [
    "config:base",
    "schedule:weekends"
  ],
  "regexManagers": [
    {
      "fileMatch": [
        "^Makefile$"
      ],
      "matchStrings": [
        "^LOCALSTACK_VERSION *= *(?<currentValue>.*)"
      ],
      "datasourceTemplate": "docker",
      "depNameTemplate": "localstack/localstack",
      "versioningTemplate": "docker"
    }
  ],
  "postUpdateOptions": [
    "gomodTidy"
  ],
  "packageRules": [
    {
      "packagePatterns": [
        "^golang.org/x/"
        ],
        "schedule": [
          "on the first day of the month"
        ]
    },
    {
      "packagePatterns": [
        "^github.com/aws/aws-sdk-go"
        ],
        "separateMinorPatch": true,
        "patch": {
          "automerge": true
        }
    }
  ],
  "timezone": "Asia/Tokyo"
}
